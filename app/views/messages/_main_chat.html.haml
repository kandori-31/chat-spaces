.chat-main
  .chat-main__group-info
    .chat-main__group-info__left
      .chat-main__group-info__left__name
        =@group.name
      .chat-main__group-info__left__member
        Memberï¼š
        %ul
          - @group.users.each do |user|
            %li= user.name

    .chat-main__group-info__right
    = link_to "Edit",edit_group_path(@group.id), class:"chat-main__group-info__right__edit" 
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    = form_for [@group, @message],{ class: "form" }  do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text',placeholder: 'type a message'
        =f.label :image, class: 'input-box__image' do
          = icon('fas', 'image')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'send-box'
        