.chat-main__message-list__message
  .chat-main__message-list__message__upper
    .chat-main__message-list__message__upper__name
      = message.user.name
    .chat-main__message-list__message__upper__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__message__text
    = message.content
  =image_tag message.image.url, class: 'chat-main__message-list__message__text__image' if message.image.present?