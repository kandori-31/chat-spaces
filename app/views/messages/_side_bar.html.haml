.side-bar
  .side-bar__user-name
    .side-bar__user-name__box
      .side-bar__user-name__box__name
        =current_user.name
      .side-bar__user-name__box__icon
        .side-bar__user-name__box__icon--edit
        =link_to new_group_path do
          = icon('far', 'edit',class: 'side-bar__user-name__box__icon__edit-icon')
        =link_to edit_user_path(current_user)  do
          = icon('fa', 'cog', class: 'side-bar__user-name__box__icon__gire-icon')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group
        = link_to '#' do
          .side-bar__group-list__group__group-name
            = group.name
          .side-bar__group-list__group__message
            まだメッセージがありません
  